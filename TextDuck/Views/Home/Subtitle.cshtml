@model IQueryable<TextDuck.Models.srtFiles>

<h1>Skjátextar</h1>

<div>
    @Html.ActionLink("Bæta við skjátexta", "Create", "Home")
</div>

@foreach (var item in Model)
{
    <div class="jumbotron">
        <p class="Date">
            @Html.DisplayFor(modelItem => item.Date)
            <span class="glyphicon glyphicon-time"></span>
        </p>
        <p>
            <div class="Title"> @Html.ActionLink(item.Title, "ViewSrt", new { Id = item.Id })</div>
           @* @Html.DisplayFor(modelItem => item.Status)&nbsp;|&nbsp;*@
            @Html.DisplayFor(modelItem => item.Language)&nbsp;|&nbsp;
            @Html.DisplayFor(modelItem => item.Genre)&nbsp;|&nbsp;
            @Html.DisplayFor(modelItem => item.Category)
            <div>
                @Html.ActionLink("Breyta skrá", "TextBoxSrt", new { Id = item.Id}, null)&nbsp;|&nbsp;
                @Html.ActionLink("Breyta upplýsingum", "FileAppearanceChanges", new { Id = item.Id }, null)

            </div>
         </p>
    </div>

}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
