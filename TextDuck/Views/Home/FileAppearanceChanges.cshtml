@model TextDuck.Models.srtFiles

<div class="uploadFile">
    @using (Html.BeginForm("Create", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                @Html.LabelFor(model => model.Title, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Title)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Language, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.DropDownListFo(model => model.Language, ViewBag.Language as List<SelectListItem>)
                    @Html.ValidationMessageFor(model => model.Language)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Category, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.Category, ViewBag.Categories as List<SelectListItem>)
                    @Html.ValidationMessageFor(model => model.Category)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Genre, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.Genre, ViewBag.Genre as List<SelectListItem>)
                    @Html.ValidationMessageFor(model => model.Genre)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Status, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.Status, ViewBag.Status as List<SelectListItem>)
                    @Html.ValidationMessageFor(model => model.Status)
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Vista" class="btn btn-default" />
                </div>
            </div>
        </div>
}
    </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


