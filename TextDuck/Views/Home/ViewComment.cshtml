@model IQueryable<TextDuck.Models.CommentItem>

<link href="/Content/Table.css" rel="stylesheet" />
<h1>Latest Comments</h1>

@foreach (var item in Model)
{
    <div class="jumbotron">
        <p class="Date">
            @Html.DisplayFor(modelItem => item.DateCreated)
            <span class="glyphicon glyphicon-time"></span>
        </p>
        <h2 class="Title">@Html.ActionLink(item.Title, "AddComment", new { id = item.Id })</h2>
        <p class="Text">@Html.DisplayFor(modelItem => item.Text)</p>
        <p class="Text">@Html.DisplayFor(modelItem => item.UserName)</p>
        @Html.ActionLink("Ny athugasemd", "AddComment", new { Id = item.Id, Title = item.Title }, null)
    </div>

}


