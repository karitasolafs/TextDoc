@model TextDuck.Models.FileUpload

<div class="uploadFile">
@using (Html.BeginForm("Create", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    
        Senda inn nyja skra
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.FileId)

                <div class="form-group">
                        @Html.LabelFor(model => model.File, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.File, new { type = "file" })
                        @Html.ValidationMessageFor(model => model.File)
                    </div>
                </div>

                <div class="form-group">
                        @Html.LabelFor(model => model.FileTitle, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.FileTitle)
                        @Html.ValidationMessageFor(model => model.FileTitle)
                    </div>
                </div>

                <div class="form-group">
                        @Html.LabelFor(model => model.FileCategory, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.FileCategory, ViewBag.Categories as List<SelectListItem>)
                        @Html.ValidationMessageFor(model => model.FileCategory)
                    </div>
                </div>

                <div class="form-group">
                        @Html.LabelFor(model => model.FileGenre, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.FileGenre, ViewBag.Genre as List<SelectListItem>)
                        @Html.ValidationMessageFor(model => model.FileGenre)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Senda" class="btn btn-default" />
                    </div>
                </div>
</div>
}
    </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


