@model TextDuck.Models.FileUpload


@using (Html.BeginForm("UploadFile", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.FileId)

        <div class="form-group">
            <div class="col-md-10">
                <label for="Upload">Velja skrá: </label>
                <input type="file" name="UploadFile" />
            </div>
       </div>

            <div class="form-group">
  
                <div class="col-md-10">
                    <label for="Title">Nafn: </label>
                    @Html.EditorFor(model => model.FileTitle)
                    @Html.ValidationMessageFor(model => model.FileTitle)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <label for="Category">Flokkur: </label>
                    @Html.DropDownListFor(model => model.FileCategory, ViewBag.Categories as List<SelectListItem>)
                    @Html.ValidationMessageFor(model => model.FileCategory)
                </div>
            </div>

        <div class="form-group">
            <div class="col-md-10">
                <label for="Genre">Tegund: </label>
                @Html.DropDownListFor(model => model.FileGenre, ViewBag.Genre as List<SelectListItem>)
                @Html.ValidationMessageFor(model => model.FileGenre)
            </div>
        </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Senda" class="btn btn-default" />
                </div>
            </div>
        </div>
}

<div>
    @Html.ActionLink("Back to basics", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


