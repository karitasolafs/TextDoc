@model TextDuck.Models.SubtitlesViewModel

@{
    ViewBag.Title = "Skjátextar";
}
<h2>Skjátextar</h2>

@using (Html.BeginForm("Subtitles", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{ 
    <div class="form-group">
        @Html.LabelFor(m => m.Category, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.CheckBoxFor(m => m.Category, new { @unchecked = "movie" })
            @Html.Label("movie", "Kvikmynd")
            @Html.CheckBoxFor(m => m.Category, new { @unchecked = "show" })
            @Html.Label("show", "Sjónvarpsþáttur")
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Type, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.CheckBoxFor(m => m.Type, new { @unchecked = "horror" })
            @Html.Label("horror", "Hryllings")
            @Html.CheckBoxFor(m => m.Type, new { @unchecked = "drama" })
            @Html.Label("drama", "Drama")
            @Html.CheckBoxFor(m => m.Type, new { @unchecked = "comedy" })
            @Html.Label("comedy", "Gaman")
            @Html.CheckBoxFor(m => m.Type, new { @unchecked = "romantic" })
            @Html.Label("romantic", "Rómantík")
            @Html.CheckBoxFor(m => m.Type, new { @unchecked = "action" })
            @Html.Label("action", "Hasar")
            @Html.CheckBoxFor(m => m.Type, new { @unchecked = "kids" })
            @Html.Label("kids", "Krakkar")
            @Html.CheckBoxFor(m => m.Type, new { @unchecked = "biblio" })
            @Html.Label("biblio", "Heimilda")
        </div>
    </div>
    
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}