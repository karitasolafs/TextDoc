@model IQueryable<TextDuck.Models.srtFiles>

<h1>Beidnir</h1>

@foreach (var item in Model)
{
   <div class="jumbotron">
        <p class="Date">
            @Html.DisplayFor(modelItem => item.Date)
            <span class="glyphicon glyphicon-time"></span>
        </p>
        <h2 class="Status">@Html.ActionLink(item.Title, "Request")</h2>
        <p class="Title">@Html.DisplayFor(modelItem => item.Status)</p>
        <p class="Language">@Html.DisplayFor(modelItem => item.Language)</p>
        <p class="Genre">@Html.DisplayFor(modelItem => item.Genre)</p>
        <p class="Category">@Html.DisplayFor(modelItem => item.Category)</p>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
