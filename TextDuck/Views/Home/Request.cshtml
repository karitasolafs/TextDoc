@model IQueryable<TextDuck.Models.srtFiles>


<h1>Beiðnir</h1>
<div>
@Html.ActionLink("Bæta við beiðni", "CreateRequest", "Home")
</div>




<table class="table">
    <tr>
        <th>
            Nafn
        </th>
        <th>
            Tungumál
        </th>
        <th>
            Flokkur
        </th>
        <th>
            Tegund
        </th>
        <th>
            Dagsetning
        </th>
        <th>
            Aðgerðir
        </th>
        <th>
            Eftirspurn
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Title, "ViewSrt", new { Id = item.Id })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Language)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.ActionLink("Færa í \"í vinnslu\"", "RequestMoved", new { id = item.Id })
            </td>
            <td>
                <a href="@Url.Action("Index", new { id = item.Id })">
                    <i class="glyphicon glyphicon-arrow-up"></i>
                    <span class="sr-only">Index</span>
                </a>
            </td>
        </tr>
    }

</table>



<div>
    @Html.ActionLink("Aftur a forsidu", "Index")
</div>
