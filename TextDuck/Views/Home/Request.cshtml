@model IQueryable<TextDuck.Models.srtFiles>


<h1>Beidnir</h1>
<div>
@Html.ActionLink("Bæta við beiðni", "CreateRequest", "Home")
</div>

@foreach (var item in Model)
{
   <div class="jumbotron">
        <p class="Date">
            @Html.DisplayFor(modelItem => item.Date)
            <span class="glyphicon glyphicon-time"></span>
        </p>
        <h2 class="Title">@Html.ActionLink(item.Title, "ViewSrt", new { Id = item.Id })</h2>
       @* @Html.DisplayFor(modelItem => item.Status) &nbsp; | &nbsp;*@
        @Html.DisplayFor(modelItem => item.Language) &nbsp; | &nbsp;
        @Html.DisplayFor(modelItem => item.Genre) &nbsp; | &nbsp;
       @Html.DisplayFor(modelItem => item.Category)
       <p>@Html.ActionLink("Færa í \"í vinnslu\"", "RequestMoved", new { Id = item.Id })</p> 
       @Html.ActionLink("Commenta", "AddComment", new { Id = item.Id }, null)

       <button type="button">
           <span class="glyphicon glyphicon-arrow-up"></span>
       </button>
     
    </div>
    
}



