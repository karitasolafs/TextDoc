@model TextDuck.Models.srtFiles
@{
    ViewBag.Categories = "test";
}



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>srtFiles</h4>
        <hr />

        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.Category)
        @Html.HiddenFor(model => model.Date)
        @Html.HiddenFor(model => model.Genre)
        @Html.HiddenFor(model => model.Language)
        @Html.HiddenFor(model => model.Status)

        

        <div class="form-group">
            <div>@Html.LabelFor(model => model.Title, new { @class = "col-md-2 control-label" })</div>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Title)
            </div>
        </div>

        
        <div class="form-group">
            @Html.LabelFor(model => model.Content, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Content, new { @cols = "150", @rows = "20" })
                @Html.ValidationMessageFor(model => model.Content)
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Vista breytingar" class="btn btn-default" />
            </div>
        </div>
    </div>


}


