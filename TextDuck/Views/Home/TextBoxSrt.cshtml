@model TextDuck.Models.srtFiles


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>srtFiles</h4>
        <hr />

        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.Category)
        @Html.HiddenFor(model => model.Date)
        @Html.HiddenFor(model => model.Genre)
        @Html.HiddenFor(model => model.Language)
        @Html.HiddenFor(model => model.Status)
        @Html.HiddenFor(model => model.Title)


        
        <div class="form-group">
    
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Content, new { @cols = "150", @rows = "20" })
                @Html.ValidationMessageFor(model => model.Content)
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Vista breytingar" class="btn btn-default" />
            </div>
        </div>
    </div>


}


